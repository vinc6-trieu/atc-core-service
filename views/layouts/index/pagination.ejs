<!-- Pagination -->
<div class="row">
	<div class="col-md-12 pagi-area text-center">
		<nav aria-label="navigation">
			<% let pages = 2; page = page - 1; %>

			<ul class="pagination">
				<% if (page - 1 >= 0) {%>
				<li class="page-item">
					<a class="page-link" href="<%=pagination[0]%>">
						<i class="fas fa-angle-double-left"></i>
					</a>
				</li>
				<% } %>
				<!--- LEFT PAGINATION 2 -->
				<% if (page - 2 >= 0 && page + 1 >= pagination.length) {%>
				<li class="page-item">
					<a class="page-link" href="<%=pagination[page - 2]%>"><%= page - 1 %> </a>
				</li>
				<% } %>

				<!--- LEFT PAGINATION 1 -->
				<% if (page - 1 >= 0) {%>
				<li class="page-item">
					<a class="page-link" href="<%=pagination[page - 1]%>"><%= page %> </a>
				</li>
				<% } %>

				<li class="page-item active">
					<a class="page-link" href="<%=pagination[page]%>"><%= page + 1 %></a>
				</li>

				<!--- RIGHT PAGINATION -->
				<% if (page + 1 < pagination.length) {%>
				<li class="page-item">
					<a class="page-link" href="<%=pagination[page + 1]%>"><%= page + 2 %></a>
				</li>
				<% } %>

				<!--- RIGHT PAGINATION 2 -->
				<% if (page + 2 < pagination.length && page - 1 < 0) {%>
				<li class="page-item">
					<a class="page-link" href="<%=pagination[page + 2]%>"><%= page + 3 %></a>
				</li>
				<% } %>

				<!-- RIGHT ARROW -->
				<% if (page + 1 < pagination.length) { %>
				<li class="page-item">
					<a class="page-link" href="<%=pagination[pagination.length - 1]%>">
						<i class="fas fa-angle-double-right"></i>
					</a>
				</li>
				<% } %>
			</ul>
		</nav>
	</div>
</div>

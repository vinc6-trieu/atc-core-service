<div class="breadcrumbs">
  <div class="page-header float-left pl-5 pr-5">
    <div class="page-title">
      <h1 class="d-inline-block float-left">Danh sách người hướng dẫn</h1>
    </div>
  </div>
  <div class="d-flex align-items-center float-right pr-5" style="height: 50px;">
    <div data-action="/cms-api/v1/instructors" data-type="instructors" class="button-create-empty button btn-success p-2 pl-3 pr-3 br-7">
      Tạo mới
    </div>
  </div>
</div>

<div class="col-lg bg-light pl-5 pr-5" style="padding-bottom: 100px">
  <%- include('../../../components/filters/instructor')%>
  <br />
  <table class="table" style="margin: auto">
    <thead>
      <tr class="bg-light">
        <th scope="col">#ID</th>
        <th scope="col">Họ và Tên</th>
        <th scope="col">SDT</th>
        <th scope="col">Email</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% instructors.forEach(instructor=> {%>
      <tr>
        <td rowspan="2" style="width: 150px">
          <div class="d-flex flex-column">
            <div class="d-flex justify-content-center">
              <%=FORMAT_ID_FN(`${instructor._id}`)%> <br />
            </div>
            <br />
            <div data-url="/cms-api/v1/instructors/<%=instructor._id%>" data-id="<%=instructor._id%>" class="button btn-danger p-2 pl-3 pr-3 br-7 button-remove">
              Xoá
            </div>
          </div>
        </td>
        <td scope="row">
          <div class="d-flex flex-column justify-content-center	" style="max-width: 70%">
            <div class="mb-1"><strong style="width: 100px" class="d-inline-block">Tiếng Việt:
              </strong></div>
            <%=instructor.viName || '(chưa có bản dịch)' %>
          </div>
        </td>
        <td rowspan="2" style="width: 150px; vertical-align: middle">
          <div class="d-flex flex-column">
            <div class="d-flex justify-content-center">
              <%=instructor.phone %> <br />
            </div>
          </div>
        </td>
        <td rowspan="2" style="width: 150px; vertical-align: middle">
          <div class="d-flex flex-column">
            <div class="d-flex justify-content-center">
              <%=instructor.email %> <br />
            </div>
          </div>
        </td>
        <td style="width: 70px">
          <div class="d-flex flex-column justify-content-center">
            <a href="/cms/instructors/<%=instructor._id%>?lang=vi" data-id="<%=instructor._id%>" class="edit-button button btn-info p-2 pl-3 pr-3 br-7 mb-2 text-light">Sửa
            </a>
            <div data-url="/cms-api/v1/instructors/<%=instructor._id%>/vi" data-id="<%=instructor._id%>" class="button <%=instructor.vi?'btn-danger':'btn-secondary'%> p-2 pl-3 pr-3 br-7 button-remove">
              Xoá
            </div>
          </div>
        </td>
      </tr>
      <tr>
        <td scope="row">
          <div class="d-flex flex-column justify-content-center" style="max-width: 70%">
            <div class="mb-1"><strong style="width: 100px" class="d-inline-block">English: </strong>
            </div>
            <%=instructor.enName || '(chưa có bản dịch)' %>
          </div>
        </td>
        <td style="width: 70px">
          <div class="d-flex flex-column justify-content-center">
            <a href="/cms/instructors/<%=instructor._id%>?lang=en" data-id="<%=instructor._id%>" class="button btn-info p-2 pl-3 pr-3 br-7 mb-2">Sửa</a>
            <div data-url="/cms-api/v1/instructors/<%=instructor._id%>/en" data-id="<%=instructor._id%>" class="button <%=instructor.en?'btn-danger':'btn-secondary'%> p-2 pl-3 pr-3 br-7 button-remove">
              Xoá
            </div>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <br />
  <br />
  <div class="container d-flex justify-content-center">
    <div class="pagination" style="margin: auto; align-self: center; justify-self: center">
      <% pagination.forEach((link, index)=> {%>
      <a class="<%=page == index + 1 ? 'active': '' %>" href="<%=link%>">
        <%=index+1%>
      </a>
      <%}) %>
    </div>
  </div>
</div>
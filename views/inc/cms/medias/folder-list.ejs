<head>
    <style>
        .card-container {
            display: grid;
            grid-template-columns: 30px 1fr 4fr 24px;
            justify-content: center;
            align-items: center;
            justify-self: center;
            gap: 8px;
        }

        .card-container .card-intro {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .card-container .card-title {
            font-size: 16px;
            margin: 0;
        }

        .card-container .card-text {
            font-size: 12px;
            margin: 0;
        }

        .card-container .media-checkmark {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card-container .card-checkmark {
            position: relative !important;
        }

        .card-checkmark input {
            position: absolute;
            top: 0;
            left: 0;
            visibility: hidden;
        }

        .card-checkmark label {
            width: 1.25rem;
            /* Adjust the size of the checkbox */
            height: 1.25rem;
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 3px;
            cursor: pointer;
        }

        .card-checkmark input:checked+label {
            background-color: #28a745;
            /* Green color when checked */
            border: 1px solid #28a745;
        }

        .card-actions {
            width: 100%;
            height: 100%;
            /* display: flex; */
            justify-content: center;
            align-items: center;
            display: none;
        }

        .media-container:hover .card-actions {
            display: flex;
        }

        .card-edit {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            outline: none;
            border: none;
            background: none;
            margin: 0;
            padding: 0;
        }


        .card-edit img {
            display: block;
            width: 100%;
            object-fit: cover;
        }
    </style>
</head>
<div class="container mt-4">
    <div class="row">
        <% mediaLibrary.forEach(function(item, index) { %>
            <div class="media-container col-lg-4 col-md-3 col-sm-6 mb-4">
                <div class="card position-relative">
                    <div class="card-body">
                        <div class="card-container">
                            <div class="media-checkmark">
                                <div class="card-checkmark"> <input type="checkbox" class="form-check-input" id="checkbox<%= index %>"> <label class="form-check-label"
                                        for="checkbox<%= index %>"></label> </div>
                            </div>
                            <div> <img src="/doc-icon.png" class="card-img-top" alt="Folder Icon"> </div>
                            <div class="card-intro">
                                <h5 class="card-title">
                                    <%= item.title %>
                                </h5>
                                <p class="card-text">Size: <%= item.size %> items</p>
                            </div>
                            <div class="card-actions">
                                <button class="card-edit">
                                    <img src="/doc-icon.png" alt="">
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
</div>